[push]
        default = current   # nomme et lie automatiquement la branche upstream sur un "git push"
[core]
        autocrlf = false
        eol = lf
[pull]
        ff = only           # ne crée pas de commit de merge cracra à chaque pull (utile !)
        rebase = true       # tente un rebase après pull
[merge]
        ff = false          # créé un commit de merge plutot que reprendre les commits individuels au merge

[pager]
        branch = false      # lister les branches existantes sans pagination

# Submodules behaviour
[submodule]
        recurse = true

# Setup colors
[color]
        branch = auto
        diff = auto
        status = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
